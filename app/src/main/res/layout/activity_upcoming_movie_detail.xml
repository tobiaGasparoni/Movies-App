<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".ui.trend_movie_detail.Movie_Detail_Trend_Activity"
    android:layout_width="match_parent" style="@style/groupStylered_900">

    <ImageView android:id="@+id/U_movie_detail_image"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/U_txt_Movie_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5492611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8293333"
        tools:src="@drawable/img_image29"/>


    <TextView
        android:id="@+id/U_txt_Movie_Name"
        style="@style/txtUbuntubold26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Casino"
        app:layout_constraintEnd_toEndOf="@+id/U_txt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/U_txt"
        app:layout_constraintTop_toBottomOf="@+id/U_movie_detail_image" />

    <TextView
        android:id="@+id/U_txt"
        style="@style/txtUbunturegular19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/U_txt_Movie_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/U_txt_Movie_Name"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintGroup304"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50pxv"
        android:layout_marginBottom="@dimen/_4pxv"
        app:layout_constraintBottom_toBottomOf="@+id/txtNumeroLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_txt_Movie_Name">

        <TextView
            android:id="@+id/U_txt_Like_ReleseaseDate"
            style="@style/txtUbuntubold26"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="@dimen/_10pxh"
            android:gravity="center"
            android:text="2021-09-30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/U_txt_Rating"
            app:layout_constraintStart_toEndOf="@+id/U_txt_adult"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/U_txt_Rating"
            style="@style/txtUbuntubold26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginEnd="@dimen/_20pxh"
            android:gravity="center"
            android:text="80%"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/U_txt_Like_ReleseaseDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/U_txt_adult"
            style="@style/txtUbuntubold26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_marginEnd="@dimen/_7pxh"
            android:layout_marginBottom="@dimen/_3pxv"
            android:gravity="center"
            android:text="NO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/U_txt_Like_ReleseaseDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView android:id="@+id/txtNumeroLikes"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_39pxv"
        android:layout_width="wrap_content"
        android:text="+18"
        android:layout_marginStart="62dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintGroup304"
        style="@style/txtUbunturegular15"/>

    <TextView android:id="@+id/txt_rating"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15pxh"
        android:layout_marginStart="@dimen/_205pxh"
        android:layout_marginTop="@dimen/_19pxv"
        android:layout_width="wrap_content"
        android:text="rating"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNumeroLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/txtNumeroLikes"
        app:layout_constraintTop_toTopOf="@+id/constraintGroup304"
        style="@style/txtUbunturegular15"/>

    <TextView
        style="@style/txtUbunturegular15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20pxh"
        android:layout_marginEnd="@dimen/_3pxh"
        android:gravity="center"
        android:text="Release Date"
        app:layout_constraintEnd_toEndOf="@+id/U_txt_Movie_Name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/U_txt_Movie_Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNumeroLikes"/>

</androidx.constraintlayout.widget.ConstraintLayout>