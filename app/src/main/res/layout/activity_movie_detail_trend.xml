<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    tools:context=".ui.trend_movie_detail.Movie_Detail_Trend_Activity"
    android:layout_width="match_parent" style="@style/groupStylered_900">

    <ImageView android:id="@+id/T_movie_detail_image"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="45dp"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/T_txt_Movie_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5492611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8293333"
        tools:src="@drawable/img_image29"/>


    <TextView
        android:id="@+id/T_txt_Movie_Name"
        style="@style/txtUbuntubold26"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Casino"
        app:layout_constraintEnd_toEndOf="@+id/T_txtTime"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/T_txtTime"
        app:layout_constraintTop_toBottomOf="@+id/T_movie_detail_image" />

    <TextView
        android:id="@+id/T_txtTime"
        style="@style/txtUbunturegular19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Crime - 179 min"
        app:layout_constraintBottom_toBottomOf="@+id/T_txt_Movie_Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/T_txt_Movie_Name"
        app:layout_constraintVertical_bias="0.0" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintGroup304"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18pxv"
        android:layout_marginEnd="@dimen/_15pxh"
        android:layout_marginBottom="@dimen/_4pxv"
        app:layout_constraintBottom_toBottomOf="@+id/txtNumeroLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/T_txt_Movie_Name">


        <TextView
            android:id="@+id/T_txt_Rating"
            style="@style/txtUbuntubold26"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2pxh"
            android:layout_marginEnd="72dp"
            android:gravity="center"
            android:text="80%"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/T_txt_numlikes"
            style="@style/txtUbuntubold26"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/_68pxh"
            android:layout_marginTop="@dimen/_2pxv"
            android:layout_marginBottom="@dimen/_3pxv"
            android:gravity="center"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/T_txt_Rating"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView android:id="@+id/txtNumeroLikes"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_49pxv"
        android:layout_width="wrap_content"
        android:text="Total Likes"
        android:layout_marginStart="69dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintGroup304"
        style="@style/txtUbunturegular15"/>

    <TextView android:id="@+id/txt_rating"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15pxh"
        android:layout_marginStart="@dimen/_69pxh"
        android:layout_marginTop="@dimen/_39pxv"
        android:layout_width="wrap_content"
        android:text="rating"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNumeroLikes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/txtNumeroLikes"
        app:layout_constraintTop_toTopOf="@+id/constraintGroup304"
        style="@style/txtUbunturegular15"/>

    <TextView
        style="@style/txtUbunturegular15"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20pxh"
        android:layout_marginEnd="@dimen/_3pxh"
        android:gravity="center"
        android:text="   "
        app:layout_constraintEnd_toEndOf="@+id/T_btn_AgregaraFavor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/T_btn_AgregaraFavor"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtNumeroLikes"/>

    <Button
        android:id="@+id/T_btn_AgregaraFavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_59pxh"
        android:layout_marginEnd="@dimen/_23pxh"
        android:layout_marginBottom="@dimen/_16pxv"
        android:alpha="0.5"
        android:backgroundTint="@android:color/white"
        android:text="Add to Favorites"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_rating"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_rating"
        app:layout_constraintVertical_bias="0.488" />

</androidx.constraintlayout.widget.ConstraintLayout>